generator client {
  provider = "prisma-client-js"
}

// generator erd {
//   provider = "prisma-erd-generator"
// }

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Company {
  id               Int     @id @default(autoincrement())
  name             String?
  cnpj             String  @unique
  quantityEmployee String?
  email            String
  cep              String
  phone            String
  road             String
  city             String
  state            String

  jobs Job[]

  @@map("companies")
}

model Job {
  id          Int     @id @default(autoincrement())
  title       String
  companyId   Int
  jobQuantity Int
  company     Company @relation(fields: [companyId], references: [id])
  stacks      String

  @@map("jobs")
}
