generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Company {
  id               Int     @id @default(autoincrement())
  name             String?
  cnpj             String  @unique
  quantityEmployee String?
  email            String
  cep              String
  phone            String
  road             String
  city             String
  state            String
  description_text String
  Job              Job[]

  @@map("companies")
}

model Job {
  id            Int     @id @default(autoincrement())
  job_title     String
  job_companyId Int
  job_quantity  String
  company       Company @relation(fields: [job_companyId], references: [id])
  technologies  String // linguagens de programação
  salary        String // salario 
  modality      String // modalidade
  seniority     String // senioridade
  requirements  String // requisitos
  details       String // detalhes da vaga

  @@map("jobs")
}

model User {
  id             Int     @id @default(autoincrement())
  email          String  @unique
  password       String
  password_reset String?

  @@map("users")
}
